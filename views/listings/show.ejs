<% layout("/layouts/boilerplate") -%>

<style>
  /* ðŸ”¹ Review Card Styling */
  .review-card {
    margin: 10px;
    flex: 0 0 45%; /* default: 2 cards per row */
    max-width: 45%;
  }

  /* âœ… Responsive review cards */
  @media (max-width: 576px) {
    .review-card {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }

  @media (min-width: 577px) and (max-width: 767px) {
    .review-card {
      flex: 0 0 100%;
      max-width: 100%;
    }
  }

  @media (min-width: 768px) and (max-width: 992px) {
    .review-card {
      flex: 0 0 48%;
      max-width: 48%;
    }
  }

  @media (min-width: 993px) {
    .review-card {
      flex: 0 0 45%;
      max-width: 45%;
    }
  }

  /* ðŸ”¹ Show Page Image Styling (match index.js card width) */
  .show-img {
    width: 100%; /* fills parent column width */
    height: 18rem; /* same as index.js */
    object-fit: cover;
    border-radius: 0.25rem;
  }
</style>

<body>
  <!-- ðŸ”· Outer Container for Centered Card -->
  <div class="d-flex justify-content-center card-outer mt-5">
    <div class="card show-card" style="width: 80%;">

      <!-- ðŸ”· Listing Title -->
      <h2 class="text-center mt-3">
        <%= singleListing.title %>
      </h2>

      <!-- ðŸ”· Listing Details Section -->
      <div class="row g-4 p-3 align-items-start">
        <!-- ðŸ–¼ï¸ Image Column -->
        <div class="col-md-6">
          <img src="<%= singleListing.image.url %>" class="show-img" alt="Listing Image">
        </div>

        <!-- ðŸ“„ Text Column -->
        <div class="col-md-6">
          <ul class="list-unstyled">
            <li class="des mb-2">Owned By <i><%= singleListing.owner.username %></i></li>
            <li class="des mb-2"><%= singleListing.description %></li>
            <li class="loc mb-2"><%= singleListing.location %></li>
            <li class="count mb-2"><%= singleListing.country %></li>
          </ul>

          <!-- âœï¸ Edit/Delete Buttons for Owner -->
          <% if (currentUser && currentUser._id.equals(singleListing.owner._id)) { %>
            <div class="buttons d-flex gap-3 mt-3">
              <form action="/listings/<%= singleListing._id %>/edit" method="get">
                <button class="btn btn-primary px-5 py-2 rounded">Edit</button>
              </form>
              <form action="/listings/<%= singleListing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger px-5 py-2 rounded">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>

      <!-- ðŸ’¬ Review Section -->
      <div class="col-12">
        <% if (currentUser) { %>
          <hr>
          <h4 class="mb-3">Leave a Review</h4>

          <form action="/listings/<%= singleListing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="Username" class="form-label">Username</label>
              <input type="text" id="rating" name="review[username]" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="no-rate">Rating</label>
              <fieldset class="starability-growRotate">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>

            <div class="mb-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea name="review[comment]" id="comment" rows="5" class="form-control w-100" placeholder="Write your thoughts..." required></textarea>
              <div class="invalid-feedback">Please add some comment for review</div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        <% } %>

        <% if (singleListing.review.length > 0) { %>
          <hr>
          <div class="row">
            <h4>All Reviews</h4>
            <% for (review of singleListing.review) { %>
              <div class="card review-card col-5">
                <div class="card-body">
                  <h5 class="review-username"><%= review.username %></h5>
                  <p class="review-comment"><%= review.comment %></p>
                  <p class="starability-result" data-rating="<%= review.rating %>"></p>
                </div>

                <form action="/listings/<%= singleListing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
                  <button class="btn btn-dark btn-small">Delete</button>
                </form>
              </div>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>

