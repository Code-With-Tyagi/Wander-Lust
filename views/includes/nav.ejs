<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
    integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <style>
    /* ðŸ”¹ Hamburger Menu Styling */
    .navbar-nav {
      display: flex;
      flex-direction: row;
      gap: 1rem;
    }

    /* ðŸ”¹ Mobile menu hidden initially on small screens */
    @media (max-width: 768px) {
      .navbar-nav {
        position: fixed;
        top: 0;
        right: -250px; /* hidden by default */
        width: 250px;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.95);
        flex-direction: column;
        align-items: center;
        justify-content: start;
        padding-top: 3rem;
        gap: 1.5rem;
        transition: right 0.4s ease-in-out;
        z-index: 9999;
      }

      .navbar-nav.show {
        right: 0; /* slide in */
      }

      .navbar-nav li {
        list-style: none;
      }

      /* ðŸ”¹ White color for all links */
      .navbar-nav li a {
        color: #fff !important; /* white text */
        font-size: 1.2rem;
        text-decoration: none;
        padding: 0.5rem 1rem;
        width: 100%;
        text-align: center;
        transition: box-shadow 0.3s ease;
      }

      /* Hover effect with white box-shadow */
      .navbar-nav li a:hover {
        box-shadow: 0 0 10px #fff;
        border-radius: 5px;
      }

      /* Hide default collapse button background */
      .navbar-toggler {
        border: none;
        background: transparent;
        z-index: 10000;
      }

      .navbar-toggler-icon {
        color: #fff;
        font-size: 1.5rem;
      }
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <button class="navbar-toggler" type="button" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">&#9776;</span> <!-- Hamburger icon -->
      </button>

      <div class="navbar-nav">
        <!-- Explore -->
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
        <!-- Add new listing -->
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Add new listing</a>
        </li>

        <!-- User authentication links -->
        <% if (!currentUser) { %>
          <li class="nav-item signup">
            <a class="nav-link btn-signup" href="/signup"><b>Sign up</b></a>
          </li>
          <li class="nav-item login">
            <a class="nav-link btn-login" href="/login"><b>Log in</b></a>
          </li>
        <% } %>

        <% if (currentUser) { %>
          <li class="nav-item logout">
            <a class="nav-link btn-logout btn-danger" href="/logout"><b>Log out</b></a>
          </li>
        <% } %>
      </div>
    </div>
  </nav>

  <script>
    // ðŸ”¹ Toggle mobile menu
    const toggler = document.querySelector('.navbar-toggler');
    const navMenu = document.querySelector('.navbar-nav');

    toggler.addEventListener('click', () => {
      navMenu.classList.toggle('show');
    });
  </script>
</body>

</html>

